    "default_format": "srt",
    "include_confidence": true,
    "output_directory": "outputs",
    "temp_directory": "temp",
    "generate_both_languages": true,
    "original_language_suffix": "_ja",
    "translated_language_suffix": "_zh",
    "combine_languages": false
